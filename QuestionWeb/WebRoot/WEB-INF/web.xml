<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>RegServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.RegServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DoRegServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.DoRegServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DoLoginServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.DoLoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.ListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>VoteServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.VoteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.AddServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DoAddServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.DoAddServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DoVoteServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.DoVoteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ModifyServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.ModifyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>vip.itellyou.ui.servlet.SearchServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>RegServlet</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DoRegServlet</servlet-name>
    <url-pattern>/doReg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DoLoginServlet</servlet-name>
    <url-pattern>/doLogin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListServlet</servlet-name>
    <url-pattern>/list</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>VoteServlet</servlet-name>
    <url-pattern>/m/vote</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddServlet</servlet-name>
    <url-pattern>/m/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DoAddServlet</servlet-name>
    <url-pattern>/m/doAdd</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DoVoteServlet</servlet-name>
    <url-pattern>/m/doVote</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ModifyServlet</servlet-name>
    <url-pattern>/m/modify</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>meFilter</filter-name>
    <filter-class>vip.itellyou.ui.filter.MyExceptionFilter</filter-class>
    <init-param>
      <param-name>errorPage</param-name>
      <param-value>/500.jsp</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>ecFilter</filter-name>
    <filter-class>vip.itellyou.ui.filter.EncodeFilter</filter-class>
    <init-param>
      <param-name>ec</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>alFilter</filter-name>
    <filter-class>vip.itellyou.ui.filter.AutoLoginFilter</filter-class>
  </filter>
  <filter>
     <filter-name>transFilter</filter-name>
     <filter-class>vip.itellyou.ui.filter.TransFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>meFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ecFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>alFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>transFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
  	<listener-class>vip.itellyou.ui.listener.SetOnlineListener</listener-class>
  </listener>
</web-app>